    .radio-group {
        display: flex;
        gap: var(--spacing-md);
    }
    
    .radio-label {
        display: flex;
        align-items: center;
        cursor: pointer;
    }
    
    .radio-label input {
        margin-right: var(--spacing-xs);
        width: auto;
    }
    
    .rsvp-submit {
        width: 100%;
        margin-top: var(--spacing-md);
        padding: var(--spacing-md);
    }
    
    .rsvp-confirmation {
        display: none;
        text-align: center;
        max-width: 500px;
        margin: 0 auto;
        background-color: var(--color-background);
        padding: var(--spacing-lg);
        border-radius: var(--border-radius-lg);
        box-shadow: var(--shadow-md);
    }
    
    .rsvp-confirmation i {
        font-size: var(--font-size-3xl);
        color: var(--color-primary);
        margin-bottom: var(--spacing-md);
    }
    
    .rsvp-confirmation h3 {
        margin-bottom: var(--spacing-sm);
    }

    form {
        border-radius: 50%;

    }
</style>

<script>
import { formDataToObject } from "astro:actions";

    // Mostrar/ocultar el campo de número de invitados según la respuesta
    document.addEventListener('DOMContentLoaded', () => {
        const attendanceRadios = document.querySelectorAll('input[name="attendance"]');
        const guestsGroup = document.getElementById('guests-group');
        
        attendanceRadios.forEach(radio => {
            radio.addEventListener('change', (e) => {
                if (e.target.value === 'yes') {
                    guestsGroup.style.display = 'block';
                } else {
                    guestsGroup.style.display = 'none';
                }
            });
        });
        
        // Manejar el envío del formulario
        const rsvpForm = document.getElementById('rsvp-form');
        const rsvpConfirmation = document.getElementById('rsvp-confirmation');
        
        if (rsvpForm) {
            rsvpForm.addEventListener('submit', async function (e)  {
                e.preventDefault();
                const formData = new FormData(rsvpForm);

                try{
                    await fetch(form.action, {
                        method: form.method,
                        body: formData,
                    });
                         rsvpForm.style.display = 'none';
                        rsvpConfirmation.style.display = 'block';

                    alert('Formulario enviado con éxito');
                    form.reset();
                }catch (error) {
                    alert('Error al enviar el formulario');
                }
                
                // Aquí se podría agregar código para enviar los datos a un servidor
                // Por ahora, solo mostraremos el mensaje de confirmación
           
            });
        }
    });
</script>